<!-- app/views/products/new.html.erb -->
<h1>Add a New Product</h1>

<%= form_for @product do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price, step: "0.01" %>
  </div>

  <div class="actions">
    <%= f.submit "Create Product" %>
  </div>
<% end %>

<%= link_to "Back to Product List", products_path %>
